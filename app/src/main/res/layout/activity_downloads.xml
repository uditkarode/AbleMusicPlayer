<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/downloads_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:title="@string/downloads_title"
        app:titleTextColor="#fbfbfb"
        app:navigationIconTint="#fbfbfb" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- YouTube Downloads section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downloads_section_title"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/download_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:visibility="gone" />

            <TextView
                android:id="@+id/downloads_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/downloads_empty"
                android:textColor="#80fbfbfb"
                android:textSize="15sp"
                android:paddingTop="4dp"
                android:paddingBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33fbfbfb"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <!-- Spotify Import section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/downloads_spotify_title"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/spotify_idle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/downloads_spotify_idle"
                android:textColor="#80fbfbfb"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/spotify_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/spotify_track_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fbfbfb"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spotify_progress_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#80fbfbfb"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <ProgressBar
                    android:id="@+id/spotify_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progressTint="@color/colorAccent" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
