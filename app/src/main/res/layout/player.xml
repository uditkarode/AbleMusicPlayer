<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <!-- Top controls: down arrow and queue button -->
    <RelativeLayout
        android:id="@+id/top_controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/player_down_arrow"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:padding="20dp"
            android:src="@drawable/down_arrow" />

        <ImageView
            android:id="@+id/player_queue"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:padding="20dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/pl_playlist" />

    </RelativeLayout>

    <!-- Album art: responsive square, part of packed chain centered between top bar and cast -->
    <RelativeLayout
        android:id="@+id/album_art"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_rectangle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/top_controls"
        app:layout_constraintBottom_toTopOf="@id/controls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="480dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_albart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="AlbumArt"
            android:scaleType="fitXY"
            app:riv_corner_radius="8dp"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/note_ph"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_music_note_black_24dp" />

        <ProgressBar
            android:id="@+id/youtubeProgressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Controls: song info, seekbar, time, playback buttons -->
    <LinearLayout
        android:id="@+id/controls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/album_art"
        app:layout_constraintBottom_toTopOf="@id/bottom_cast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/song_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!--suppress AndroidUnknownAttribute -->
            <TextView
                android:id="@+id/song_name"
                fontPath="fonts/interbold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:maxLines="2"
                android:text="@string/song_ex2"
                android:textColor="#fbfbfb"
                android:textSize="22sp"
                tools:ignore="MissingPrefix,RtlSymmetry" />

            <!--suppress AndroidUnknownAttribute -->
            <TextView
                android:id="@+id/artist_name"
                fontPath="fonts/interbold.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:text="@string/art_ex"
                android:textColor="#80fbfbfb"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/player_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15.8dp"
            android:layout_marginTop="5dp"
            android:progressBackgroundTint="@color/white"
            android:backgroundTint="@color/white"
            android:secondaryProgressTint="@color/white"
            android:indeterminateTint="@color/white"
            android:foregroundTint="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp">

            <TextView
                android:id="@+id/player_current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="7dp"
                android:text="1:16"
                android:textColor="#80fbfbfb"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/complete_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:layout_alignParentEnd="true"
                android:text="2:54"
                android:textColor="#80fbfbfb"
                android:textSize="12sp"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/shuffle_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/shuffle"
                android:paddingStart="4dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/previous_song"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/skip_previous"
                android:layout_toStartOf="@+id/player_center_icon"
                android:layout_marginEnd="35dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/player_center_icon"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/play"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/next_song"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/skip_next"
                android:layout_toEndOf="@+id/player_center_icon"
                android:layout_marginStart="35dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/repeat_button"
                android:layout_width="26.5dp"
                android:layout_height="26.5dp"
                android:src="@drawable/repeat"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Cast button (disabled) -->
    <LinearLayout
        android:id="@+id/bottom_cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cast" />

        <!--suppress AndroidUnknownAttribute -->
        <TextView
            fontPath="fonts/interbold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="Cast (disabled)"
            android:textColor="#80fbfbfb"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
